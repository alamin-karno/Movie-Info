<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MovieDetailsActivity">

    <ImageView
        android:id="@+id/imageViewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_alignBottom="@id/imageViewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/shadow_background"
        android:orientation="vertical"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/titleDetails"
                android:layout_width="0dp"
                android:layout_weight="85"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ratingValueDetails"
                android:layout_width="0dp"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="2.4"
                android:background="@drawable/circle"
                android:padding="8dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <RatingBar
                android:id="@+id/ratingBarDetails"
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="true"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:id="@+id/reviewDetails"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/overviewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="overview"
            android:layout_gravity="center_vertical|end"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

    </LinearLayout>




</RelativeLayout>